<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="techknights.droidrush.getalarmed.AlarmAlertActivity">



    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="time"
        android:textSize="30dp"
        android:textAlignment="center"
        />

    <ImageView
        android:id="@+id/imp_level"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:text="imp"
        android:layout_below="@+id/time"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/equation"
        android:text="equation"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_below="@+id/imp_level"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/whats_it"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="WHAT'S IT"

        android:layout_above="@+id/snooze"
        android:textSize="20dp"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/snooze"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="SNOOZE"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/dismiss"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="DISMISS"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:text=""
        android:hint="Answer "
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_below="@+id/equation"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

